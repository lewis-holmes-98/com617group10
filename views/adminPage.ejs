<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My account</title>
</head>
<body>
    <%- include('common/header'); -%>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                        <button>Make admin</button>
                        <button>Delete account</button> <!-- href to use findandremovebyid-->
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>

</body>
</html>
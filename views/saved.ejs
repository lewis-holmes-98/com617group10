<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="scripts/search.js"></script>

    <title>Saved</title>
</head>
<body>
    <%- include('common/header'); -%>

    <main class="container " style="flex: 1 0 auto;">

        <div class="text-center">
            <p>Saved resorts</p>
        </div>

        <div class="row mb-3">
            <% const savedResorts = resorts  %>
            <% savedResorts.forEach(resort => { %>
                <strong class="d-inline-block mb-2 text-secondary"><%= resort.formattedName %></strong>
                <a href="resort/<%= resort.name %>" class="link link-secondary">Go to resort</a> 
                <a href="/user/unsave/<%= resort.id %>" class="link link-primary">Unsave</a> 
            <% } )%>
        </div>
        
      </main>
    
</body>
</html>